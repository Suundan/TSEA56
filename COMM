	TWITransmitData('f'); //Kör rakt fram, reglerar efter vägg TODO, kolla upp vilken char
	//Uppdatera karta
	//Uppdatera robotposition
}

void controlDescion(){
	//If left sensor value is larger than 40 cm
	if (US_sens_front_left > 0x10B8)
	{
		//Åk fram lite, hamna mitt i rutan
		
		if (US_sens_right > 0x10B8 & US_sens_ahead > 0x10B8)
		{
			//Fyrvägs-korsning
		}
		else if (US_sens_ahead > 0x10B8 & US_sens_right <= 0x042E)
		{
			//Trevägs-korsning enligt bild 5
		}
		else if (US_sens_right > 0x10B8 & US_sens_ahead <= 0x042E)
		{
			//Trevägs-korsning enligt bild 3
		}
		else // (US_sens_ahead <= 0x042E & US_sens_right <= 0x042E)
		{
			//Sväng vänster, enligt bild 2
		}
	}
	//If right sensor value is larger than 40 cm
	else if (US_sens_right > 0x10B8)
	{
		//Åk fram lite, hamna mitt i rutan
		
		if (US_sens_front_left > 0x10B8 & US_sens_ahead > 0x10B8)
		{
			//Fyrvägs-korsning
		}
		else if (US_sens_ahead > 0x10B8 & US_sens_front_left <= 0x042E)
		{
			//Trevägs-korsning enligt bild 4
		}
		else if (US_sens_front_left > 0x10B8 & US_sens_ahead <= 0x042E)
		{
			//Trevägs-korsning enligt bild 3
		}
		else // (US_sens_ahead <= 0x042E & US_sens_front_left <= 0x042E)
		{
			//Sväng höger, enligt bild 1
		}
	}
	//If sensor ahead is less than 40 cm
	else if (US_sens_ahead < 0x10B8 & US_sens_right < 0x10B8 & US_sens_front_left < 0x10B8)
	{
		//Turn 180 degrees and go back to decision point
	}
	else
	{
		//Keep going forward (It's a corridor)
	}
	goForward();
}

int main(void)
{

	TWIInit();
	init_bluetooth();
	mapInit();
	int remotePin = 1;

	char testMap[mapRows][mapCols];
	
	for(int i = 0; i < mapRows; i++)
	{
		for (int j = 0; j < mapCols; j++)
		{
			
			testMap[i][j] = 'o';
		}
	}
	
	while (1) {
		
		sendMap(testMap);
		testMap[1][1] = 'p';
		_delay_ms(200);
		sendMap(testMap);
		testMap[1][1] = 'w';
		_delay_ms(200);
	}
}
